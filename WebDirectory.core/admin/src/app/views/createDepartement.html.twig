{% extends 'base.html.twig' %}

{% block title %}
Créer un Département
{% endblock %}

{% block body %}
    <h1>Créer un Département</h1>
    <form action="{{ url_for('createDepartmentPOST') }}" method="post">
        <label for="name">Nom du Département:</label>
        <input type="text" id="name" name="name" required>

        <label for="stage">Étage Principal:</label>
        <input type="number" id="stage" name="stage" required>

        <label for="description">Description:</label>
        <input type="text" id="description" name="description" required></input>

        <input type="submit" value="Créer">
    </form>
{% endblock %}
